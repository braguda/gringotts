<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/app.css">
<link rel="stylesheet" href="/css/profile.css">
<div class="container-fluid">
    <div class="container d-flex justify-content-center row mt-4">
        <div class="filled-card card mb-3 pt-3 col-md-6">
            <h4><%= foundUsers.username.charAt(0).toUpperCase() + foundUsers.username.slice(1)  %>'s posts</h4>
            <ul class="pt-3 card">
                <% for(let i of foundPosts){ %>
                    <% if(i.author.username === username) { %>
                        <li>
                            <h2><%= i.title %></h2>
                            <p><%= i.body %></p>
                            <p><%= i.likes %> likes</p>
                            <p>                            
                                <a class="bttn ms-2 float-end" href="/posts/<%= i.id %>">View</a>
                            </p>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="bordered-card card mb-3 pt-3">
                <div class="container offset-3">
                    <h1><%= foundUsers.username.charAt(0).toUpperCase() + foundUsers.username.slice(1)  %></h1>
                    <% if(currentUser.following.includes(foundUsers._id)){ %>
                        <div class="container pb-3">
                            <span class="bttn">Following &#10003;</span>
                        </div>
                        <div class="container pb-3">
                            <form action="/inne/follow/remove" method="POST">
                                <input type="hidden" name="_id" value="<%= foundUsers._id %>">
                                <button class="bttn" id="reload">Unfollow</button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="container pb-3">
                            <form action="/inne/follow" method="POST">
                                <input type="hidden" name="_id" value="<%= foundUsers._id %>">
                                <button class="bttn" id="reload">Follow</button>
                            </form>
                        </div>
                     <% } %>
                </div>
            </div>
        </div>
    </div>
    
</div>
